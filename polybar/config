; Under/overline pixel size and argb colour
overline-size = 0
overline-color = {colours.white}

underline-size = 0
unerline-color = ${colours.white}

; Borders (Can define border-top/right/bottom/left)
border-size = 0
border-color = colours.black

; Side padding (spaces)
padding-left = 1
