[bar/default]

; Use first screen found
monitor = VGA-1
;monitor-fallback =

; Dont require monitor to be connected
monitor-strict = false

; Dont display on bottom of screen
bottom = false

; Center It
fixed-center = true

; Size
width = 100%
height = 24px

; Offset
offset-x = 0
offset-y = 0

; Colours
background = ${colours.bg-primary} 
